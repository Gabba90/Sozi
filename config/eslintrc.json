{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "plugins": ["jsdoc"],
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended"
    ],
    "settings": {
        "jsdoc": {
            "tagNamePreference": {
                "augments": "extends"
            }
        }
    },
    "rules": {
        "no-unused-vars": ["warn"],
        "no-prototype-builtins": ["warn"],
        "jsdoc/require-jsdoc": ["warn", {
            "publicOnly": true,
            "checkSetters": false,
            "require": {
                "ClassDeclaration": true,
                "MethodDefinition": true
            }
        }],
        "jsdoc/tag-lines": ["warn", "any"]
    }
}
